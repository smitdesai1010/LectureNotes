{
    "manifest_version": 2,
    "name": "LectureNotes.AI",
    "description": "Notes.AI helps to take notes from a online meeting in real time with various languages",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon/note-taking.png",
        "default_popup": "popup.html"
    },

    "background":{
        "scripts": [
            "js/Recorder.js",
            "js/background.js"   
        ],
        "persistent": true
    },

    "permissions": [
        "activeTab",
        "downloads",
        "tabCapture",
        "downloads"
    ]
}