{
    "manifest_version": 2,
    "name": "LectureNotes",
    "description": "A chrome extension that summarizes audio from a chrome tab into text with support for multiple languages",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon/chromeExtension-Logo.png",
        "default_popup": "popup.html"
    },

    "background":{
        "scripts": [
            "js/Recorder.js",
            "js/background.js"   
        ],
        "persistent": true
    },

    "permissions": [
        "activeTab",
        "downloads",
        "tabCapture",
        "downloads"
    ]
}
